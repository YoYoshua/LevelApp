@import "levelapp.variables.styl"
@import "quasar.variables.styl"

.courses-card {
  height $courses-card-height
  border-radius 15px
}

.empty-courses-card {
  @extend .courses-card

  color $courses

  border-width 3px
  border-style dashed
  border-color $courses

  transition all 0.2s ease-in-out

  &:hover {
    background-color $courses
    border-color white
    color white
  }
}
