// Fullpage navbar color
#fp-nav ul li a span
  background-color: white

.text-align-center
  text-align center

.text-align-justify
  text-align justify
  text-justify inter-word

.text-align-right
  text-align right

.min-h-250
  min-height 250px

.text-no-underline
  text-decoration none

// Layout
.overlay
  width 100%
  height 100%
  position absolute
  top 0
  left 0
  z-index 2

.clip-hex
  clip-path polygon(50% 0%, 93.5% 25%, 93.5% 75%, 50% 100%, 6.5% 75%, 6.5% 25%)

.align-center
  align-content center

// SVG
.svg-wrapper
  position relative
  height 100%
  width 100%

.svg
  position absolute
  left 0
  top 0
  width 100%
  height 100%

// Cards

.base-card
  border-radius 15px
  position relative
  top 0

.base-card-hover
  transition top 0.2s ease-in-out

  &:hover
    top -3px


// Quasar chips
.chip-icon-no-margin .q-icon {
  margin 0
}

