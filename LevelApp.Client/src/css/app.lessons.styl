@import "levelapp.variables.styl"
@import "quasar.variables.styl"

@import "app.base.styl"

.lessons-card {
  @extend .base-card
  @extend .base-card-hover
  height $lessons-card-height
}

.empty-lessons-card {
  @extend .base-card
  height $lessons-card-height
  background-color rgba(0, 0, 0, 0.05)
  box-shadow none
}

.add-lessons-card {
  @extend .lessons-card

  color $lessons

  border-width 3px
  border-style dashed
  border-color $lessons

  transition all 0.2s ease-in-out

  &:hover {
    background-color $lessons
    border-color white
    color white
  }
}
